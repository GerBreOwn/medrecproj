SELECT   `visit_medicine`.`brand_name`,
         `visit_medicine`.`generic_name`,
         `visit_dose`.`dose_name`,
         `T1`.`medicine_reminder`,
         `visit_medicine`.`medicine_quantity`
FROM     `visit_prescription` 
INNER JOIN `visit_visit`  ON `visit_prescription`.`visit_id` = `visit_visit`.`id` 
INNER JOIN `visit_medicine`  ON `visit_prescription`.`medicine_id` = `visit_medicine`.`id` 
INNER JOIN `visit_reminder`  ON `visit_medicine`.`medicine_reminder_id` = `visit_reminder`.`id` 
INNER JOIN `visit_dose`  ON `visit_medicine`.`medicine_dose_id` = `visit_dose`.`id` ,
         `visit_reminder` `T`,
         `visit_reminder` `T1`
